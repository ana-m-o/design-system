        "rollup-plugin-serve": "^2.0.1",
        "rollup-plugin-styles": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "version-bump-prompt": "6.1.0"
    },
    "scripts": {
        "build": "rm -fr dist && rollup --environment BUILD:production -c rollup.config.js",
        "deploy": "make deploy",
        "watch": "rm -fr dist && rollup --environment BUILD:production -c rollup.config.js -w",
        "start": "node watcher.js",
        "test": "jest --runInBand --collect-coverage",
        "next-ci": "bump --prerelease --tag --push --preid rc --all && npm run build && npm publish --tag next",
        "latest-ci": "bump --patch --tag --push && npm run build && npm publish --tag latest",
        "storybook": "start-storybook -p 6006 --no-manager-cache",
        "build-storybook": "build-storybook",
        "deploy-storybook": "storybook-to-ghpages"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json"
        ],
        "transformIgnorePatterns": [
            "/node_modules/(?!antd|@ant-design|rc-.+?|@babel/runtime).+(js|jsx)$"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>test/setup.js"
        ],
        "moduleNameMapper": {
            "\\.(css|less|scss)$": "<rootDir>/config/__mocks__/styleMock.js"
        },
        "testMatch": [
            "<rootDir>/test/**/?(*.)(test).js"
        ],
        "testEnvironment": "jsdom"
    }
}
